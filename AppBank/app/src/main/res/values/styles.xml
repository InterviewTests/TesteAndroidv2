<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextPrimaryButton" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="TextTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="subtitlePrimary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextCardDescription" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextDescription" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="TextDescriptionPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

</resources>
