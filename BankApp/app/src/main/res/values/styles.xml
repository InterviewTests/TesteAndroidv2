<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonBlueRounded" parent="AppTheme">
        <item name="android:background">@drawable/button_rounded_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">70dp</item>
        <item name="android:paddingEnd">70dp</item>
    </style>

    <style name="TextWhite">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextWhiteBig" parent="TextWhite">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextGrey">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGreyText</item>
    </style>
    <style name="CustomToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
</resources>
