<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="BankButtonStyle">
        <item name="android:layout_width">@dimen/raisedButtonSizeWidth</item>
        <item name="android:layout_height">@dimen/raisedButtonSizeHeight</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textSize">@dimen/textSize16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BankEditTextStyle">
        <item name="android:textSize">@dimen/textSize16sp</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:textColorHint">@color/light_gray</item>
    </style>

    <style name="ErroFeedBackStyle">
        <item name="android:layout_height">@dimen/erroFeedBackSize</item>
        <item name="android:layout_width">@dimen/erroFeedBackSize</item>
    </style>

    <style name="HomeCardTextBig">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/homeTextBig</item>
    </style>

    <style name="HomeCardTextSmall">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/homeTextSmall</item>
    </style>

    <style name="RecyclerViewTitleStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/recyclerVieTitleSize</item>
    </style>

    <style name="StatementItemTitle">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/textSize16sp</item>
    </style>

    <style name="StatementItemTitleDark">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/textSize16sp</item>
    </style>

    <style name="StatementItemTitleDarkBigger">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/textSize20sp</item>
    </style>

    <style name="StatementItemDate">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/textSize12sp</item>
    </style>

    <style name="HomeCardStatementStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/statementCardSize</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">@dimen/marginBig</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">@dimen/marginSmall</item>

    </style>

    <style name="HomeInfoCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/homeInfoCardSize</item>
        <item name="android:background">@color/accent</item>
    </style>
</resources>
