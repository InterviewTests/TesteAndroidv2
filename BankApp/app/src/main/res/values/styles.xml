<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="BankButtonStyle">
        <item name="android:layout_width">@dimen/raisedButtonSizeWidth</item>
        <item name="android:layout_height">@dimen/raisedButtonSizeHeight</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textSize">@dimen/textSize16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BankEditTextStyle">
        <item name="android:textSize">@dimen/textSize16sp</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:textColorHint">@color/light_gray</item>
    </style>

    <style name="ErroFeedBackStyle">
        <item name="android:layout_height">@dimen/erroFeedBackSize</item>
        <item name="android:layout_width">@dimen/erroFeedBackSize</item>
    </style>

</resources>
