<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextField.Password">
        <item name="passwordToggleEnabled">true</item>
    </style>

    <style name="TextCard">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextCard.Body">
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="TextCard.Title">
        <item name="android:textSize">@dimen/text_title</item>
    </style>
</resources>
