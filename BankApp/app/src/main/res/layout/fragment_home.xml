<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/view"
            android:background="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/glUserDataBotton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glUserDataTop"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.03"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glUserDataBotton"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glBotton"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_exit"
            android:id="@+id/ivExit"
            app:layout_constraintTop_toTopOf="@+id/tvUserName"
            app:layout_constraintBottom_toBottomOf="@+id/tvUserName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_background_ripple_transparent"
            android:padding="8dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserName"
            tools:text="Jose da Silva Teste"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@id/glUserDataTop"
            app:layout_constraintBottom_toTopOf="@id/tvUserAccount"
            app:layout_constraintVertical_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/white"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAccountLabel"
            tools:text="Conta"
            app:layout_constraintBottom_toTopOf="@+id/tvUserAccount"
            app:layout_constraintStart_toStartOf="@+id/tvUserAccount"
            android:textColor="@android:color/white"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserAccount"
            tools:text="2050 / 01.111222-4"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/tvUserName"
            app:layout_constraintTop_toBottomOf="@+id/tvUserName"
            app:layout_constraintBottom_toTopOf="@id/tvUserBalance"
            android:textColor="@android:color/white"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvBalanceLabel"
            tools:text="Saldo"
            app:layout_constraintStart_toStartOf="@+id/tvUserBalance"
            app:layout_constraintBottom_toTopOf="@+id/tvUserBalance"
            android:textColor="@android:color/white"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/tvUserBalance"
            tools:text="R$1.000,00"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/tvUserName"
            app:layout_constraintTop_toBottomOf="@+id/tvUserAccount"
            app:layout_constraintBottom_toTopOf="@+id/glUserDataBotton"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"/>

    <TextView
            android:text="@string/recent_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/tvUserBalance"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view"
            android:textSize="18sp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvStatement"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:listitem="@layout/item_statement"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>

</androidx.constraintlayout.widget.ConstraintLayout>