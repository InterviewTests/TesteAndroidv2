<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/lblItemTitle"
            style="@style/currency_item_style"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/label_payment"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblDate"
            style="@style/currency_item_style"
            android:layout_height="20dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            android:text="12/12/2012"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblDescription"
            style="@style/currency_item_style"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Conta de luz"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblItemTitle" />

        <TextView
            android:id="@+id/lblValue"
            style="@style/currency_item_style"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:text="R$1.000,00"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblDate" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>