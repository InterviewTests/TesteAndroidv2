<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
            android:layout_width="150dp"
            android:layout_height="80dp"
            tools:src="@drawable/ic_bank_logo"
            android:id="@+id/ivBankLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/glUserDataTop"
            android:alpha="0"/>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tflUser"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/glUserDataBotton"
            android:layout_marginBottom="8dp"
            android:alpha="0">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tfiUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/user_label"
                android:inputType="text"
                android:singleLine="true"
                android:imeOptions="actionDone|actionSend"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tflPassowrd"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/glUserDataBotton"
            android:layout_marginTop="8dp"
            android:alpha="0">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tfiPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password_label"
                android:singleLine="true"
                android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
            android:id="@+id/btLogin"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:text="@string/login_label"
            android:textSize="18sp"
            android:background="@drawable/button_background_ripple_blue"
            app:layout_constraintBottom_toTopOf="@+id/glBotton"
            app:layout_constraintStart_toStartOf="@+id/tflPassowrd"
            app:layout_constraintEnd_toEndOf="@+id/tflPassowrd"
            app:layout_constraintDimensionRatio="w,4:1"
            android:textAllCaps="false"
            app:layout_constraintHorizontal_bias="0.618"
            android:alpha="0"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glUserDataBotton"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.40"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glUserDataTop"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glBotton"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95"/>

    <FrameLayout
            android:id="@+id/flLoader"
            android:clickable="false"
            android:background="@color/grey_alpha_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

        <ProgressBar
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyle"
                android:id="@+id/progressBar"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>