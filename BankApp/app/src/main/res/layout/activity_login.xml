<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.presentation.LoginActivity">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="0dp"
            android:contentDescription="@string/logo_description"
            android:layout_height="@dimen/ic_large_height"
            android:src="@drawable/ic_logo"
            android:layout_marginTop="@dimen/default_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/layout_active_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/large_margin"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/img_logo"
            app:layout_constraintStart_toStartOf="@id/guide_start"
            app:layout_constraintEnd_toEndOf="@id/guide_end">

            <Button
                android:id="@+id/btn_active_user"
                style="@style/BankTextView"
                android:background="@drawable/button_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_layout_height"
                android:paddingStart="@dimen/default_padding"
                android:paddingEnd="@dimen/default_padding"
                android:gravity="center"
                android:textAllCaps="false"
                tools:text="Acessar como Jose"/>

            <Button
                android:id="@+id/btn_new_login"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="end"
                android:textSize="@dimen/small_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/change_user_login"/>
        </LinearLayout>

        <EditText
            style="@style/BankEditText"
            android:id="@+id/edt_user"
            android:layout_width="0dp"
            android:hint="@string/user"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_margin"
            app:layout_constraintTop_toBottomOf="@id/img_logo"
            app:layout_constraintStart_toStartOf="@id/guide_start"
            app:layout_constraintEnd_toEndOf="@id/guide_end" />

        <EditText
            style="@style/BankEditText"
            android:id="@+id/edt_password"
            android:layout_width="0dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            app:layout_constraintStart_toStartOf="@id/guide_start"
            app:layout_constraintEnd_toEndOf="@id/guide_end"
            app:layout_constraintTop_toBottomOf="@id/edt_user"/>

        <Button
            style="@style/BankButton"
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:layout_marginBottom="@dimen/default_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_start"
            app:layout_constraintGuide_begin="@dimen/default_margin"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_end"
            app:layout_constraintGuide_end="@dimen/default_margin"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_new_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="edt_user,edt_password,btn_login"
            tools:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>