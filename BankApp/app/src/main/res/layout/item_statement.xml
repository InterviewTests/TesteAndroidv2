<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:contentPadding="@dimen/default_padding"
    android:layout_marginTop="@dimen/small_margin"
    android:layout_marginStart="@dimen/default_margin"
    android:layout_marginEnd="@dimen/default_margin"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_statement_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="top"
            app:layout_constraintBottom_toTopOf="@id/txt_statement_desc"
            app:layout_constraintEnd_toStartOf="@id/txt_statement_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Pagamento" />

        <TextView
            android:id="@+id/txt_statement_desc"
            style="@style/BankTextView.Title"
            android:layout_width="0dp"
            android:gravity="bottom"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            app:layout_constraintEnd_toStartOf="@id/txt_statement_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_statement_title"
            tools:text="Conta de luz" />

        <TextView
            android:id="@+id/txt_statement_date"
            style="@style/BankTextView.Small.Gray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_statement_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_statement_title"
            tools:text="12/12/2018" />

        <TextView
            android:id="@+id/txt_statement_value"
            style="@style/BankTextViewValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_statement_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_statement_desc"
            tools:text="R$ 1.000,00" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>