<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_marginBottom="10dp">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/tv_transactionLabel"
                android:text="@string/transactions_payment"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="@string/acountDetail_defautLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_transactionLabel"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/tv_transactionData" app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
        <TextView
                android:text="@string/acountDetail_defautLabel"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_transactionDescription"
                app:layout_constraintTop_toBottomOf="@+id/tv_transactionLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" android:layout_marginStart="8dp"/>
        <TextView
                android:text="@string/acountDetail_defautLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_transactionValue"
                android:textSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/tv_transactionDescription"
                app:layout_constraintTop_toBottomOf="@+id/tv_transactionData"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="16dp" android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>