<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
    </style>

    <style name="TextPrimaryButton" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="TextTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="subtitlePrimary" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextCardDescription" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="EditTextPrimary" parent="Widget.AppCompat.EditText">
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/bg_login_edit_text</item>
    </style>

    <style name="TextDescription" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="TextDescriptionPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>



</resources>
