<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  xmlns:card_view="http://schemas.android.com/apk/res-auto"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  tools:background="@color/grey_fade"
			  android:paddingEnd="@dimen/dimen_8dp"
			  android:paddingStart="@dimen/dimen_8dp">

	<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/white"
			card_view:cardCornerRadius="@dimen/dimen_4dp"
			card_view:cardElevation="@dimen/dimen_4dp"
			card_view:cardUseCompatPadding="true">

		<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/dimen_16dp">

			<TextView
					android:id="@+id/txtTitle"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					tools:text="Pagamento"
					android:textSize="@dimen/font_16sp"
					android:textColor="@color/grey_label"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toStartOf="@+id/txtDate"/>

			<TextView
					android:id="@+id/txtDate"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/font_16sp"
					android:textColor="@color/grey_label"
					tools:text="12/12/2018"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintEnd_toEndOf="parent"/>

			<TextView
					android:id="@+id/txtDescription"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					tools:text="Conta de luz"
					android:textSize="@dimen/font_20sp"
					android:layout_marginTop="@dimen/dimen_20dp"
					android:textColor="@color/grey_text"
					app:layout_constraintTop_toBottomOf="@+id/txtTitle"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toStartOf="@+id/txtDate"/>

			<TextView
					android:id="@+id/txtValue"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/font_20sp"
					android:layout_marginTop="@dimen/dimen_20dp"
					android:textColor="@color/grey_text"
					tools:text="R$1.000,00"
					app:layout_constraintTop_toBottomOf="@+id/txtDate"
					app:layout_constraintEnd_toEndOf="parent"/>

		</androidx.constraintlayout.widget.ConstraintLayout>

	</androidx.cardview.widget.CardView>


</LinearLayout>