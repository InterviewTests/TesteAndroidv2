<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  tools:background="@color/grey_fade"
			  android:paddingStart="16dp"
			  android:paddingEnd="16dp"
			  android:paddingBottom="8dp"
			  android:paddingTop="8dp">

	<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/white"
			app:cardElevation="8dp">

		<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="16dp">

			<TextView
					android:id="@+id/lblPagamento"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:text="Pagamento"
					android:textSize="16sp"
					android:textColor="@color/grey_label"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toStartOf="@+id/txtDate"/>

			<TextView
					android:id="@+id/txtDate"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="16sp"
					android:textColor="@color/grey_label"
					tools:text="12/12/2018"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintEnd_toEndOf="parent"/>

			<TextView
					android:id="@+id/txtPagamento"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					tools:text="Conta de luz"
					android:textSize="20sp"
					android:layout_marginTop="20dp"
					android:textColor="@color/grey_text"
					app:layout_constraintTop_toBottomOf="@+id/lblPagamento"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintEnd_toStartOf="@+id/txtDate"/>

			<TextView
					android:id="@+id/txtValor"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="20sp"
					android:layout_marginTop="20dp"
					android:textColor="@color/grey_text"
					tools:text="R$1.000,00"
					app:layout_constraintTop_toBottomOf="@+id/txtDate"
					app:layout_constraintEnd_toEndOf="parent"/>

		</androidx.constraintlayout.widget.ConstraintLayout>

	</androidx.cardview.widget.CardView>


</LinearLayout>