<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="br.com.raphael.everis.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_statementsFragment"
            app:destination="@id/statementsFragment" />
    </fragment>
    <fragment
        android:id="@+id/statementsFragment"
        android:name="br.com.raphael.everis.ui.StatementsFragment"
        android:label="fragment_statements"
        tools:layout="@layout/fragment_statements" >
        <argument
            android:name="userAccount"
            app:argType="br.com.raphael.everis.model.UserAccount" />
    </fragment>
</navigation>