<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/AppTheme.Component.AppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/app_main_padding_horizontal_app_bar"
        android:paddingVertical="@dimen/app_main_padding_vertical_app_bar">

        <TextView
            android:id="@+id/txtUserName"
            style="@style/AppTheme.Component.AppBar.Text.Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Jose da Silva Teste"
            app:layout_constraintEnd_toStartOf="@id/imgLogout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imgLogout"
            style="@style/AppTheme.Component.AppBar.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_main_btn_content_description_logout"
            android:src="@drawable/ic_logout"
            app:layout_constraintBottom_toBottomOf="@id/txtUserName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txtUserName"
            app:layout_constraintTop_toTopOf="@id/txtUserName" />

        <TextView
            android:id="@+id/txtTituloConta"
            style="@style/AppTheme.Component.AppBar.Text.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_margin_top_titles_app_bar"
            android:text="Conta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtUserName" />

        <TextView
            android:id="@+id/txtConta"
            style="@style/AppTheme.Component.AppBar.Text.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_margin_top_contents_app_bar"
            android:text="2050 / 01.111222-4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTituloConta" />

        <TextView
            android:id="@+id/txtTituloSaldo"
            style="@style/AppTheme.Component.AppBar.Text.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_margin_top_titles_app_bar"
            android:text="Saldo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtConta" />

        <TextView
            android:id="@+id/txtSaldo"
            style="@style/AppTheme.Component.AppBar.Text.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_margin_top_contents_app_bar"
            android:text="R$1.000,00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTituloSaldo" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>