<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#3484F5"
            android:paddingTop="16dp"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <TextView
                    android:id="@+id/tv_user_login"
                    android:layout_width="wrap_content"
                    android:textSize="22dp"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:layout_height="48dp"
                    android:text="Francelize Melo Monteiro "/>

            <android.support.design.widget.FloatingActionButton
                    android:layout_width="match_parent"
                    android:backgroundTint="@android:color/white"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@android:drawable/bottom_bar"
                    android:layout_marginRight="16dp"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
                android:id="@+id/til_conta_label"
                android:layout_width="wrap_content"
                android:textSize="22dp"
                android:layout_marginLeft="16dp"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:text="Conta"/>
        <TextView
                android:id="@+id/til_conta_value"
                android:layout_width="wrap_content"
                android:textSize="22dp"
                android:layout_marginLeft="16dp"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:text="7737377373-4354"/>

        <TextView
                android:id="@+id/til_Saldo_label"
                android:layout_width="wrap_content"
                android:textSize="22dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:text="Saldo"/>
        <TextView
                android:id="@+id/til_valor_value"
                android:layout_width="wrap_content"
                android:textSize="22dp"
                android:layout_marginLeft="16dp"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:text="R$ 1000.000"
                android:layout_marginBottom="16dp"
        />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>