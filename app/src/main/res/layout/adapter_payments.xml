<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="366dp"
    android:layout_height="104dp"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/payment"
            android:layout_width="120dp"
            android:layout_height="18dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="19dp"
            android:text="Pagamento"
            android:textColor="@color/colorGreyLetters"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/payment_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="25dp" />

        <TextView
            android:id="@+id/payment_type"
            android:layout_width="128dp"
            android:layout_height="18dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="30dp"
            android:text="Conta de Luz"
            android:textColor="@color/colorDarkLetters"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/payment_date"
            android:layout_width="117dp"
            android:layout_height="14dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="14dp"
            android:text="12/12/2018"
            android:textAlignment="textEnd"
            android:textColor="@color/colorGreyLetters"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/payment_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/payment_value"
            android:layout_width="184dp"
            android:layout_height="23dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="29dp"
            android:text="R$1.000,00"
            android:textAlignment="textEnd"
            android:textColor="@color/colorDarkLetters"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>