<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="3dp"
      >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/itemType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo do item"
                android:textSize="@dimen/sizeFontNormal"
                android:textColor="@color/lightone"
                ></TextView>

            <TextView
                android:id="@+id/itemDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Descrição"
                android:textSize="@dimen/sizeFontNormal"
                android:textColor="@color/lightTwo"></TextView>

            <TextView
                android:id="@+id/itemDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00/00/0000"
                style="@style/FontHeaderMini"
                android:textColor="@color/lightone"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                ></TextView>

            <TextView
                android:id="@+id/itemValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="R$ 0.000,00"
                android:textColor="@color/lightTwo"
                android:textSize="18sp"></TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>