<?xml version="1.0" encoding="utf-8"?>


    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_statements"
            android:padding="10dp"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginStart="@dimen/margin_7dp"
            android:layout_marginEnd="@dimen/margin_3dp">


        <TextView
                android:id="@+id/tvTitle"
                tools:text="Pagamentos"
                android:textSize="16sp"
                android:textColor="@color/colorGreyLight"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvDesc"
                tools:text="Conta de luz"
                android:textColor="@color/colorGreyDark"
                android:textSize="16sp"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintLeft_toLeftOf="@id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvDate"
                tools:text="12/12/2018"
                android:textSize="12sp"
                android:textColor="@color/colorGreyLight"
                app:layout_constraintTop_toTopOf="@id/tvTitle"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvValue"
                tools:text="R$1.000,00"
                android:textColor="@color/colorGreyDark"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="@id/tvDesc"
                app:layout_constraintBottom_toBottomOf="@id/tvDesc"
                app:layout_constraintRight_toRightOf="@id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

