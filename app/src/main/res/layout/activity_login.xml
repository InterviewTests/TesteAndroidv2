<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_end"
        tools:context=".activity.LoginActivity">

    <ImageView
            android:id="@+id/bankImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32dp"
            android:background="@mipmap/ic_logo"
            android:accessibilityHeading="true"
            android:contentDescription="@string/login_bank"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <EditText
            android:id="@+id/userEditText"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_180dp"
            android:hint="@string/login_user"
            android:background="@drawable/edittext_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bankImageView" />

    <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:hint="@string/login_password"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="@dimen/margin_16dp"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userEditText" />

    <Button
            android:id="@+id/passwordButton"
            android:layout_width="@dimen/margin_200dp"
            android:layout_height="@dimen/margin_50dp"
            android:text="@string/login_text"
            android:background="@drawable/textview_corner"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordEditText"
            app:layout_constraintBottom_toBottomOf="parent"/>
    
    

</android.support.constraint.ConstraintLayout>