<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/statements_item_margin_top"
                android:textSize="@dimen/statements_item_title_text_size"
                android:textColor="@color/colorStatementsItemTitle"
                android:fontFamily="@font/helvetica_neue_lt_std"
                android:layout_marginStart="@dimen/statements_item_side_margin"
                tools:text="Pagamento"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/statements_item_date_text_size"
                android:textColor="@color/colorStatementsItemDate"
                android:fontFamily="@font/helvetica_neue_lt_std"
                android:layout_marginEnd="@dimen/statements_item_side_margin"
                tools:text="12/12/2018"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tv_title"/>

        <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/statements_item_margin_bottom"
                android:textSize="@dimen/statements_item_description_text_size"
                android:textColor="@color/colorStatementsItemDescription"
                android:fontFamily="@font/helvetica_neue_lt_std"
                tools:text="Conta de luz"
                app:layout_constraintLeft_toLeftOf="@id/tv_title"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/tv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/statements_item_value_text_size"
                android:textColor="@color/colorStatementsItemValue"
                android:fontFamily="@font/helvetica_neue_lt_std"
                tools:text="R$1.000,00"
                app:layout_constraintRight_toRightOf="@+id/tv_date"
                app:layout_constraintBottom_toBottomOf="@id/tv_description"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

