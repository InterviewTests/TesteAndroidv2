<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.br.myapplication.presentation.login.LoginActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="125dp"
        android:layout_height="70dp"
        android:id="@+id/imgLogo"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </androidx.appcompat.widget.AppCompatImageView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:maxLines="1"
        android:inputType="text"
        android:id="@+id/edtUserLogin"
        android:background="@drawable/edt_bordered"
        android:layout_marginTop="105dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="@string/txtUser">
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edtPasswordLogin"
        android:maxLines="1"
        android:background="@drawable/edt_bordered"
        android:inputType="textPassword"
        android:layout_marginTop="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        app:layout_constraintTop_toBottomOf="@+id/edtUserLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="@string/txtPassword">
    </EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="202dp"
        android:layout_height="62dp"
        android:text="@string/txtLogin"
        android:id="@+id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"
        android:textSize="16sp"
        app:backgroundTint="@color/appBlue"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent">
    </androidx.appcompat.widget.AppCompatButton>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/viewFocused"
        android:background="@android:color/black"
        android:alpha="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pbLoadingLogin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:id="@+id/groupProgress"
        android:visibility="gone"
        app:constraint_referenced_ids="pbLoadingLogin,viewFocused">

    </androidx.constraintlayout.widget.Group>

</androidx.constraintlayout.widget.ConstraintLayout>