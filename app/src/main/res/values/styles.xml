<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editTextPrimary">
        <item name="android:background">@android:drawable/editbox_background</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="buttonPrimary">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textLabelPrimary">
        <item name="android:textSize">@dimen/default_text_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:hint">@string/util_some_text</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="textLabelSecondary">
        <item name="android:textSize">@dimen/default_text_secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:hint">@string/util_some_text</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="textLabelThird">
        <item name="android:textSize">@dimen/default_text_third</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:hint">@string/util_some_text</item>
        <item name="android:textColorHint">@color/dark_gray</item>
    </style>

    <style name="textLabelFourth">
        <item name="android:textSize">@dimen/default_text_fourth</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:hint">@string/util_some_text</item>
        <item name="android:textColorHint">@color/light_gray</item>
    </style>

</resources>
