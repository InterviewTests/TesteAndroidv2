<resources>

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blueLogo</item>
        <item name="colorPrimaryDark">@color/blueLogo</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <item name="android:textColor">@color/blueGrayText</item>

        <item name="android:windowBackground">@color/whiteBg</item>

        <item name="android:editTextStyle">@style/AppTheme.EditText</item>
        <item name="android:buttonStyle">@style/AppTheme.Button.Colored</item>

    </style>

    <style name="AppTheme.Light" parent="Base.AppTheme">

    </style>

    <style name="AppTheme.DarkTop" parent="Base.AppTheme">

    </style>

    <style name="Base.AppTheme.TextAppearance">
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blueGrayText</item>
    </style>

    <style name="AppTheme.TextAppearance.Title" parent="Base.AppTheme.TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextAppearance.Title.White" parent="AppTheme.TextAppearance.Title">
        <item name="android:textColor">@color/whiteBg</item>
    </style>

    <style name="AppTheme.TextAppearance.Label" parent="Base.AppTheme.TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextAppearance.Label.White" parent="AppTheme.TextAppearance.Label">
        <item name="android:textColor">@color/whiteBg</item>
    </style>

    <style name="AppTheme.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">

    </style>


</resources>
