<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FontHeaderNormal">
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/sizeFontDefault</item>
    </style>
    <style name="FontHeaderMini">
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textSize">@dimen/sizeFontNormal</item>
    </style>

</resources>
