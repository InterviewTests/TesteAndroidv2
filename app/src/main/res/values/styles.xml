<resources>

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blueLogo</item>
        <item name="colorPrimaryDark">@color/blueLogo</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/whiteBg</item>

        <item name="android:editTextStyle">@style/AppTheme.EditText</item>
        <item name="android:buttonStyle">@style/AppTheme.Button.Colored</item>

    </style>

    <style name="AppTheme.Light" parent="Base.AppTheme">

    </style>

    <style name="AppTheme.DarkTop" parent="Base.AppTheme">

    </style>

    <style name="AppTheme.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <!--<item name="android:paddingStart">16dp</item>-->
        <!--<item name="android:paddingEnd">16dp</item>-->
    </style>

</resources>
