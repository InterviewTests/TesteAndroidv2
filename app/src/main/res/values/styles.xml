<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--<item name="android:background">@drawable/style_textinputlayout</item>-->
        <item name="android:layout_marginStart">17dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <!-- BORDER -->
        <item name="boxBackgroundColor">@color/colorBackground</item>
        <item name="boxStrokeColor">@color/colorBorder</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <!-- LABEL -->
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/colorTextInput</item>
        <!--<item name="android:colorError">@color/colorTextError</item>-->
    </style>

    <style name="AppTheme.TextInputEditText" parent="TextAppearance.AppCompat">
        <!-- INPUT -->
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorTextInput</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorButton</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="AppTheme.Toolbar.Label">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Toolbar.Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="AppTheme.Text">
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.RecycleView">
        <!--<item name="android:layout_marginStart">5dp</item>-->
        <!--<item name="android:layout_marginEnd">5dp</item>-->
        <!--<item name="android:layout_marginTop">8dp</item>-->
        <item name="cardBackgroundColor">@color/colorBackground</item>
    </style>

    <style name="AppTheme.CardView">
        <item name="android:layout_height">80dp</item>
        <item name="cardBackgroundColor">@color/colorBackground</item>
        <item name="boxStrokeColor">@color/colorBorder</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="AppTheme.CardView.Text">
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textColor">@color/colorRecycleItem</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.CardView.Text.Description">
        <item name="android:textColor">@color/colorRecycleItemDark</item>
    </style>

    <style name="AppTheme.CardView.Text.Date">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.CardView.Text.Value">
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
        <item name="android:textColor">@color/colorRecycleItemDark</item>
        <item name="android:textSize">20sp</item>
        <!--<item name="android:letterSpacing">3dp</item>-->
    </style>
</resources>
