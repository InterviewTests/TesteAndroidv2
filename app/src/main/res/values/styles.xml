<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/colorAccent</item>
        <item name="colorOnBackground">@color/colorAccent</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/radius_xxxs</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAppearance">@style/DisplayLPrimary</item>
    </style>

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginEnd">@dimen/spacing_s</item>
        <item name="android:layout_marginStart">@dimen/spacing_s</item>
        <item name="android:layout_width">342dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_xxxs</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_xxxs</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_xxxs</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_xxxs</item>
        <item name="android:textCursorDrawable">@color/colorAccent</item>
        <item name="android:textColorHint">@color/grayLight</item>
        <item name="errorTextAppearance">@style/styleErrorAppearance</item>
    </style>

    <style name="styleErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/danger</item>
        <item name="android:textSize">@dimen/text_s</item>
    </style>

    <style name="InputEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/DisplayLSecondary</item>
        <item name="android:textColorHint">@color/grayLight</item>
        <item name="android:textCursorDrawable">@color/colorAccent</item>'
    </style>

    <style name="DisplayXXLPrimary" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_xxl</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DisplayXXLSecondary" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_xxl</item>
        <item name="android:textColor">@color/grayLight</item>
    </style>

    <style name="DisplayXLPrimary" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_xl</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DisplayXLSecondary" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_xl</item>
        <item name="android:textColor">@color/grayLight</item>
    </style>

    <style name="DisplayLPrimary" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DisplayLSecondary" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:textColor">@color/grayLight</item>
    </style>

    <style name="DisplayLSecondaryDark" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="DisplaySPrimary" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DisplaySSecondary" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:textColor">@color/grayLight</item>
    </style>

    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardCornerRadius">@dimen/radius_xxs</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ProgressBarNormal" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
    </style>

</resources>
