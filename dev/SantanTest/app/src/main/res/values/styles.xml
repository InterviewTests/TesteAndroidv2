<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- App Logo -->
    <style name="tv_logo">
        <item name="android:text">@string/app_title</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/logo_font_size</item>
        <item name="android:textColor">@color/white_low_bright</item>
        <item name="android:background">@drawable/round_corners</item>
        <item name="android:paddingLeft">@dimen/logo_padding</item>
        <item name="android:paddingRight">@dimen/logo_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:textDirection">ltr</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
    </style>

    <!-- Login Inputs -->
    <style name="input_layout" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/input_corners</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:ems">10</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16dp</item>
    </style>


</resources>
