<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
<!--shadow to bottom and right-->
<!--by pushing offset from top and left-->
<item
        android:left="0dp"
        android:right="0dp"
        android:top="15dp"
        android:bottom="0dp">
    <shape android:shape="rectangle">
        <corners android:radius="4dp" />
        <solid android:color="#20DCE2EE" />
    </shape>
</item>
<item
        android:left="0dp"
        android:right="0dp"
        android:top="8dp"
        android:bottom="0dp">
    <shape android:shape="rectangle">
        <corners android:radius="4dp" />
        <solid android:color="#40DCE2EE" />
    </shape>
</item>
<item
        android:left="0dp"
        android:right="2dp"
        android:top="0dp"
        android:bottom="2dp">
    <shape android:shape="rectangle">
        <stroke android:width="1dp"
                android:color="#DCE2EE" />
        <solid android:color="#FFF" />
        <corners android:radius="4dp" />
    </shape>
</item>
</layer-list>