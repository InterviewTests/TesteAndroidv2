<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="match_parent"
        tools:context=".ui.login.LoginActivity">
    <ImageView
            android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_logo" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Login"
            android:layout_width="202dp"
            android:layout_height="62dp"
            android:onClick="onLogin"
            android:id="@+id/btn_login" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textAllCaps="false"
            android:background="@drawable/bg_rounded_button" android:textColor="@android:color/white"
            android:layout_marginBottom="33dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/grey"
            android:text=""
            android:textColorHint="@color/lightGrey"
            android:ems="10"
            android:background="@drawable/bg_rounded_edt"
            android:hint="Usuario"
            android:id="@+id/login_user" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="105dp"
            app:layout_constraintTop_toBottomOf="@+id/img_logo"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingEnd="16dp"
            android:textColorHint="@color/lightGrey"
            android:paddingRight="16dp"
            android:textColor="@color/grey"
            android:inputType="textPassword"
            android:text=""
            android:hint="Senha"
            android:ems="10"
            android:background="@drawable/bg_rounded_edt"
            android:id="@+id/login_pass" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/login_user"/>
</android.support.constraint.ConstraintLayout>