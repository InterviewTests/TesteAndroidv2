<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        app:cardCornerRadius="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="80dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

        <TextView
                android:text=""
                tools:text="Pagamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/payment_text"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"/>
        <TextView
                android:text=""
                tools:text="Pagamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/payment_date"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" android:layout_marginEnd="12dp" app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text=""
                tools:text="Conta de Luz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/type_text"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                android:textColor="@color/grey"
                android:textSize="16sp"
        />
        <TextView
                android:text=""
                tools:text="R$ 1.000,00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/value_price"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/grey"
                android:textSize="20sp"
                android:layout_marginEnd="12dp" app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>