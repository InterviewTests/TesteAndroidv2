<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/card_round_cornes"
        android:orientation="vertical"
        android:padding="5dp"
        android:elevation="5dp"
        android:outlineProvider="paddedBounds">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_row_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/helvetica_neue"
                android:gravity="bottom|left"
                android:paddingLeft="5dp"
                android:text="Pagamento"
                android:textAlignment="gravity"
                android:textColor="@color/txt_grey_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_row_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/helvetica_neue"
                android:gravity="bottom|right"
                android:paddingRight="5dp"
                android:textColor="@color/txt_grey_color"
                android:textSize="12sp"
                tools:text="12/12/2018" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_row_desc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/helvetica_neue"
                android:gravity="bottom|left"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:textColor="@color/txt_black_grey_color"
                android:textSize="16sp"
                tools:text="conta luz" />

            <TextView
                android:id="@+id/txt_row_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/helvetica_neue"
                android:gravity="bottom|right"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:textColor="@color/txt_black_grey_color"

                android:textSize="20sp"
                tools:text="R$ 1.000,00" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>