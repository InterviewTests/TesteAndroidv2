<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.br.web.glix.interviewgiovanipaleologo">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".splashScreen.SplashscreenActitivy"
            android:theme="@style/FullScreen"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".loginScreen.LoginScreenActivity" android:configChanges="orientation|keyboardHidden" android:singleUser="true" tools:ignore="InnerclassSeparator" />
        <activity android:name=".homeScreen.HomeScreenActivity" android:configChanges="orientation|keyboardHidden" android:singleUser="true" tools:ignore="InnerclassSeparator" />
    </application>

</manifest>