<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTextLogin">
        <item name="android:background">@drawable/border_edit_text</item>
        <item name="android:layout_marginStart">@dimen/margin_end_start</item>
        <item name="android:layout_marginEnd">@dimen/margin_end_start</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/padding_margin</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:background">@drawable/shape_button_rounded</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
