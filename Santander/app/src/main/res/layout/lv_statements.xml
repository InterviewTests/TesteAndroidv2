<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:orientation="vertical"
    android:paddingBottom="24dp"
    android:color="#FFFFFFFF"
    android:background="@drawable/box3"
    android:elevation="12.0dp"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="18.8dp"
        android:fontFamily="@font/helveticaneue"
        android:lineSpacingExtra="18sp"
        android:text="Pagamento"
        android:textColor="#FFA8B4C4"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/helveticaneue"
        android:lineSpacingExtra="18sp"
        android:text="Conta de luz"
        android:textColor="#FF485465"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24.2dp"
        android:layout_marginEnd="32.5dp"
        android:fontFamily="@font/helveticaneue"
        android:text="12/12/2018"
        android:textColor="#A8B4C4"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="27dp"
        android:fontFamily="@font/helveticaneuelight"
        android:lineSpacingExtra="18sp"
        android:text="R$1.000,00"
        android:textColor="#485465"
        android:textSize="20dp" />

</RelativeLayout>